{
    "name": "${environmentName}",
    "description": "Drupal 8.x",
    "version": "0.1",
    "author": "https://github.com/efeefe",
    "containers": [
        {
            "hostname": "drupal8",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "https",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "443",
                    "http_redirect": true,
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/efeefe/drupal-8-bp/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "site_title",
                "value": "${siteTitle}"
            }, 
            {
                "key": "domain_name",
                "value": "${domainName}"
            }, 
            {
                "key": "admin_user",
                "value": "${adminUser}"
            }, 
            {
                "key": "admin_pwd",
                "value": "${adminPwd}"
            },
            {
                "key": "email",
                "value": "${adminEmail}"
            },
        ],
        "groups": [
            {
                "name": "drupal",
                "hostnames": [
                    "drupal7"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "drupal",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "siteTitle": {
            "description": "Enter the site's title",
            "type": "string",
            "default": "title"
        },
        "adminUser": {
            "description": "Site administrator user",
            "type": "string",
            "default": "admin"
        },
        "adminPwd": {
            "description": "Site administrator password",
            "type": "string",
            "default": "admin"
        },
        "adminEmail": {
            "description": "Admin email",
            "type": "string"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "TINY",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
